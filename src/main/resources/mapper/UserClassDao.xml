<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clt.dao.UserClassDao">

    <resultMap type="com.clt.entity.UserClass" id="UserClassMap">
        <result property="classId" column="class_id" jdbcType="VARCHAR"/>
        <result property="grade" column="grade" jdbcType="VARCHAR"/>
        <result property="depart" column="depart" jdbcType="VARCHAR"/>
        <result property="major" column="major" jdbcType="VARCHAR"/>
        <result property="number" column="number" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="remark1" column="remark1" jdbcType="VARCHAR"/>
        <result property="remark2" column="remark2" jdbcType="VARCHAR"/>
        <result property="remark3" column="remark3" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserClassMap">
        select
          class_id, grade, depart, major, number, create_time, update_time, remark1, remark2, remark3
        from library.user_class
        where class_id = #{classId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserClassMap">
        select
          class_id, grade, depart, major, number, create_time, update_time, remark1, remark2, remark3
        from library.user_class
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserClassMap">
        select
          class_id, grade, depart, major, number, create_time, update_time, remark1, remark2, remark3
        from library.user_class
        <where>
            <if test="classId != null and classId != ''">
                and class_id = #{classId}
            </if>
            <if test="grade != null and grade != ''">
                and grade = #{grade}
            </if>
            <if test="depart != null and depart != ''">
                and depart = #{depart}
            </if>
            <if test="major != null and major != ''">
                and major = #{major}
            </if>
            <if test="number != null and number != ''">
                and number = #{number}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="remark1 != null and remark1 != ''">
                and remark1 = #{remark1}
            </if>
            <if test="remark2 != null and remark2 != ''">
                and remark2 = #{remark2}
            </if>
            <if test="remark3 != null and remark3 != ''">
                and remark3 = #{remark3}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="classId" useGeneratedKeys="true">
        insert into library.user_class(grade, depart, major, number, create_time, update_time, remark1, remark2, remark3)
        values (#{grade}, #{depart}, #{major}, #{number}, #{createTime}, #{updateTime}, #{remark1}, #{remark2}, #{remark3})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update library.user_class
        <set>
            <if test="grade != null and grade != ''">
                grade = #{grade},
            </if>
            <if test="depart != null and depart != ''">
                depart = #{depart},
            </if>
            <if test="major != null and major != ''">
                major = #{major},
            </if>
            <if test="number != null and number != ''">
                number = #{number},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
            <if test="remark1 != null and remark1 != ''">
                remark1 = #{remark1},
            </if>
            <if test="remark2 != null and remark2 != ''">
                remark2 = #{remark2},
            </if>
            <if test="remark3 != null and remark3 != ''">
                remark3 = #{remark3},
            </if>
        </set>
        where class_id = #{classId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from library.user_class where class_id = #{classId}
    </delete>

</mapper>