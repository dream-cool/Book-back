<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clt.dao.MessageDao">

    <resultMap type="com.clt.entity.Message" id="MessageMap">
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="sendingTime" column="sending_time" jdbcType="TIMESTAMP"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MessageMap">
        select
          user_id, sending_time, content, status
        from library.message
        where user_id = #{userId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MessageMap">
        select
          user_id, sending_time, content, status
        from library.message
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="MessageMap">
        select
          user_id, sending_time, content, status
        from library.message
        <where>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="sendingTime != null">
                and sending_time = #{sendingTime}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userId" useGeneratedKeys="true">
        insert into library.message(sending_time, content, status)
        values (#{sendingTime}, #{content}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update library.message
        <set>
            <if test="sendingTime != null">
                sending_time = #{sendingTime},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
        </set>
        where user_id = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from library.message where user_id = #{userId}
    </delete>

</mapper>